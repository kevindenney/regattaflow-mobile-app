{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "app/index.tsx",
    "app/legacy.tsx",
    "app/(auth)/**/*.ts",
    "app/(auth)/**/*.tsx",
    "app/race-analysis.tsx",
    "app/race/simulation/**/*.ts",
    "app/race/simulation/**/*.tsx",
    "app/race/timer/**/*.ts",
    "app/race/timer/**/*.tsx",
    "app/(tabs)/more.tsx",
    "components/ai/**/*.ts",
    "components/ai/**/*.tsx",
    "hooks/useApi.ts",
    "hooks/useData.ts",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "providers/**/*.ts",
    "providers/**/*.tsx",
    "services/ai/**/*.ts",
    "services/ai/**/*.tsx",
    "services/demo/**/*.ts",
    "types/**/*.ts",
    "types/**/*.tsx",
    "constants/**/*.ts",
    "utils/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "app/(legacy)/**/*",
    "app/coach/**/*",
    "components/coach/**/*",
    "components/courses/**/*",
    "components/dashboard/**/*",
    "components/documents/**/*",
    "components/map/**/*",
    "components/navigation/**/*",
    "components/race-detail/**/*",
    "components/landing/**/*",
    "services/CoachService.ts",
    "services/CoachingService.ts",
    "services/PaymentService.ts",
    "services/coach/**/*",
    "services/map/**/*",
    "services/weather/**/*",
    "services/results/**/*",
    "services/scoring/**/*",
    "services/RealtimeService.ts",
    "services/storage/**/*",
    "services/TimeBasedForecastService.ts",
    "services/RaceWeatherService.ts",
    "services/RaceCourseService.ts",
    "services/VenuePackageService.ts"
  ]
}
